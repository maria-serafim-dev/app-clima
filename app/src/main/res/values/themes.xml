<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppClima" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#CC277EC1</item>
        <item name="colorPrimaryVariant">@color/azul_card</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/azul_card</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/vermelho</item>
        <item name="colorOnSurface">@color/azul_card</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="colorSecondary">@color/azul_card</item>
    </style>

    <style name="Widget.App.TextInputLayout.Landscape" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="android:height">200dp</item>
    </style>


    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.LargeComponent</item>

    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>

    </style>

    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6"/>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/azul_card</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_nuvem_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AppClima</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>