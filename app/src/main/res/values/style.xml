<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/azul_card</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Widget.App.CardView.Pequeno" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/azul_card</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>

    </style>

    <style name="TextAppearance.App.Titulo.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/azul</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">11sp</item>
    </style>


</resources>